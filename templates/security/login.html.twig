{% extends 'base.html.twig' %}

{% block title %}Se connecter{% endblock %}

{% block body %}

    <div class="bg-light rounded-3 py-5 px-4 px-md-5 mb-5">
        <div class="text-center mb-5">
            <div class="feature bg-primary bg-gradient text-white rounded-3 mb-3"><i class="bi bi-door-open"></i></div>
            <h1 class="fw-bolder">Connexion</h1>
            <p class="lead fw-normal text-muted mb-0">We'd love to hear from you</p>
        </div>
        <div class="row gx-5 justify-content-center">
            <div class="col-md-4 col-sm-8">
                <form method="post">
{#                    {% if error %}#}
{#                        <div class="alert alert-danger">Identifiants invalides.</div>#}
{#                    {% endif %}#}
                    <!-- Email address input-->
                    <div class="form-floating mb-3">
                        <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control" autocomplete="username" required autofocus>
                        <label for="inputUsername">Identifiant</label>
                        <div class="invalid-feedback" data-sb-feedback="username:required">Identifiant obligatoire.</div>
                        <div class="invalid-feedback" data-sb-feedback="username:username">Identifiant n'est pas valide.</div>
                    </div>
                    <div class="form-floating mb-3">
                        <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
                        <label for="inputPassword">Mot de passe</label>
                        <div class="invalid-feedback" data-sb-feedback="password:required">Mot de passe obligatoire.</div>
                        <div class="invalid-feedback" data-sb-feedback="password:password">Email is not valid.</div>
                    </div>
                    <input type="hidden" name="_csrf_token"
                           value="{{ csrf_token('authenticate') }}"
                    >
                    <div class="d-grid">
                        <button class="btn btn-primary btn-lg" type="submit">Se connecter</button>
                    </div>
                    <hr class="my-4">
                    <div class="text-center">
                        <p><a class="text-center" href="{{ path('app_forgot_password') }}">J'ai oubli√© mon mot de passe</a></p>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
