{% extends 'base.html.twig' %}
{% block title %}Ajouter un trick{% endblock %}


{% block body %}
    <section class="py-5">
        <div class="container px-5">
            <!-- Contact form-->
            <div class="bg-light rounded-3 py-5 px-4 px-md-5 mb-5">
                <div class="text-center mb-5">
                    <div class="feature bg-primary bg-gradient text-white rounded-3 mb-3"><i class="bi bi-envelope"></i>
                    </div>
                    <h1 class="fw-bolder">Ajouter un trick</h1>
                    <p class="lead fw-normal text-muted mb-0">We'd love to hear from you</p>
                </div>
                <div class="row gx-5 justify-content-center">
                    <div class="col-lg-8 col-xl-6">
                        {{ form_start(formTrick) }}
                        {% for message in app.flashes('success') %}
                            <div class="alert alert-success"> {{ message }} </div>
                        {% endfor %}
                        <div class="form-row small">{{ form_row(formTrick.name) }}</div>
                        <div class="form-row description">{{ form_row(formTrick.description) }}</div>
                        <div class="form-row small">{{ form_row(formTrick.category, {'label' : 'Cat√©gorie'}) }}</div>
                        <hr>
                        <div id="pictures"
                             data-prototype="{{ form_row(formTrick.images.vars.prototype)|e('html_attr') }}">
                        </div>
                        <button type="button" id="add-picture" class="btn btn-outline-info">Ajouter une image</button>
                        <hr>
                        <div id="videos"
                             data-prototype="{{ form_row(formTrick.videos.vars.prototype)|e('html_attr') }}">
                        </div>
                        <button type="button" id="add-video" class="btn btn-outline-info">Ajouter une video</button>
                        {{ form_row(formTrick.videos) }}
                        <!-- images -->
                        {% for image in formTrick.images %}
                            <div>{{ form_row(image.file) }}</div>
                        {% endfor %}
                        <hr>
                        <div class="mb-3" id="submit-btn">{{ form_row(formTrick.submit) }}</div>
                        {{ form_end(formTrick) }}
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
