{% extends 'base.html.twig' %}
{% block title %}Ajouter un trick{% endblock %}

{% block body %}
    <section class="py-5">
        <div class="container px-5">
            <!-- Contact form-->
            <div class="bg-light rounded-3 py-5 px-4 px-md-5 mb-5">
                <div class="text-center mb-5">
                    <div class="feature bg-primary bg-gradient text-white rounded-3 mb-3"><i class="bi bi-envelope"></i>
                    </div>
                    <h1 class="fw-bolder">Ajouter un trick</h1>
                    <p class="lead fw-normal text-muted mb-0">We'd love to hear from you</p>
                </div>
                <div class="row gx-5 justify-content-center">
                    <div class="col-lg-8 col-xl-6">
                        {{ form_start(formTrick) }}
                        {% for message in app.flashes('success') %}
                            <div class="alert alert-success"> {{ message }} </div>
                        {% endfor %}
                        <div class="form-row small">{{ form_row(formTrick.name) }}</div>
                        <div class="form-row description">{{ form_row(formTrick.description) }}</div>
                        <div class="form-row small">{{ form_row(formTrick.category, {'label' : 'Catégorie'}) }}</div>
                        <!-- images -->
                        <div>
                            <a class="add_item_link btn btn-info" data-collection-holder-class="images">Ajouter une image</a>
                            <div class="images" data-index="0"
                                 data-prototype="{{ form_widget(formTrick.images.vars.prototype)|e('html_attr') }}">

                                {% for image in formTrick.images %}
                                    <div>{{ form_row(image.filename) }}</div>
                                {% endfor %}
                            </div>
                        </div>
                        <hr>
                        <div id="submit-btn">{{ form_row(formTrick.submit) }}</div>

                        {{ form_end(formTrick) }}
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!--- Manage collections -->
    <script>
        window.addEventListener('load', function () {
            const addTagFormDeleteLink = (item) => {
                //Bouton dans update / new (sélection avant envoi en db)
                const removeFormButton = document.createElement('button');
                removeFormButton.innerHTML = `
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-6 h-6">
                        <path fill-rule="evenodd" d="M16.5 4.478v.227a48.816 48.816 0 013.878.512.75.75 0 11-.256 1.478l-.209-.035-1.005 13.07a3 3 0 01-2.991 2.77H8.084a3 3 0 01-2.991-2.77L4.087 6.66l-.209.035a.75.75 0 01-.256-1.478A48.567 48.567 0 017.5 4.705v-.227c0-1.564 1.213-2.9 2.816-2.951a52.662 52.662 0 013.369 0c1.603.051 2.815 1.387 2.815 2.951zm-6.136-1.452a51.196 51.196 0 013.273 0C14.39 3.05 15 3.684 15 4.478v.113a49.488 49.488 0 00-6 0v-.113c0-.794.609-1.428 1.364-1.452zm-.355 5.945a.75.75 0 10-1.5.058l.347 9a.75.75 0 101.499-.058l-.346-9zm5.48.058a.75.75 0 10-1.498-.058l-.347 9a.75.75 0 001.5.058l.345-9z" clip-rule="evenodd" />
                    </svg>
                `;

                item.append(removeFormButton);

                removeFormButton.addEventListener('click', (e) => {
                    e.preventDefault();
                    // remove the li for the ITEM form
                    item.remove();
                });
            }

            // prend le prototype, remplace __name__ et insère dans le html
            const addFormToCollection = (e) => {
                const collectionHolder = document.querySelector('.' + e.currentTarget.dataset.collectionHolderClass);

                const item = document.createElement('li');

                item.innerHTML = collectionHolder
                    .dataset
                    .prototype
                    .replace(
                        /__name__/g,
                        collectionHolder.dataset.index
                    );

                collectionHolder.appendChild(item);

                collectionHolder.dataset.index++;
                // add a delete link to the new form
                addTagFormDeleteLink(item);
            };

            // détecte le click sur le bouton ayant la classe add_item_link & execute la fonction addFormToCollection
            document
                .querySelectorAll('.add_item_link')
                .forEach(btn => {
                    btn.addEventListener("click", addFormToCollection)
                });

            //ajout du lien delete pour chaque image en bdd cf. const/fonction cidessus en 1e?
            document
                .querySelectorAll('ul.holder-images li')
                .forEach((img) => {
                    addTagFormDeleteLink(img)
                })

            //ajout du lien delete pour chaque video...
            document
                .querySelectorAll('ul.holder-videos li')
                .forEach((vd) => {
                    console.log(vd)
                    addTagFormDeleteLink(vd)
                })
        })
    </script>
{% endblock %}
