{% for comment in comments %}
    <div class="card-body">
        <!-- Single comment-->
        <div class="d-flex mt-4">
            <div class="flex-shrink-0"><img class="rounded-circle"
                                            src="{{ asset('assets/img/profile.png') }}"
                                            alt="..."/>
            </div>
            <div class="ms-3">
                <div class="fw-bold">{{ comment.author.username }}</div>
                {{ comment.content }}
            </div>
        </div>
    </div>
{% endfor %}
<a id="load-more">
    <div colspan="3">
        <button class="btn btn-primary btn-block mb-3 text-center"
                hx-get="{{ path('app_trick_comment', { slug: trick.slug, offset: offset  }) }}"
                hx-swap="outerHTML"
        >
            Voir plus ...
        </button>
    </div>
</a>




